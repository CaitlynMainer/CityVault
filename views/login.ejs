<main>
  <form method="POST" action="/login" class="form-container">
    <div class="form-group">
      <label for="username"><span class="font-paragon">Username:</span></label>
      <input type="text" id="username" name="username" required>
    </div>

    <div class="form-group">
      <label for="password"><span class="font-paragon">Password:</span></label>
      <div class="password-wrapper">
        <input type="password" id="password" name="password" required>
        <button type="button" class="toggle-button" id="togglePassword"><span class="font-paragon" id="toggleText">👁 Show</span></button>
      </div>
    </div>

    <% if (config.email?.provider && config.email?.fromEmail) { %>
      <div style="margin-top: 4px;">
        <a href="/login/reset">Forgot your password?</a>
      </div>
    <% } %>

    <button type="submit"><span class="font-paragon">Login</span></button>
  </form>
</main>

<script>
document.getElementById('togglePassword').addEventListener('click', function () {
  const pwd = document.getElementById('password');
  const isHidden = pwd.type === 'password';
  pwd.type = isHidden ? 'text' : 'password';

  const label = document.getElementById('toggleText');
  label.textContent = isHidden ? '👁 Hide' : '👁 Show';
});
</script>
