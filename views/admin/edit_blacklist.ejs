<h1>Edit Badge Blacklist</h1>
<% if (typeof error !== 'undefined') { %>
  <div style="color: red; font-weight: bold; margin-bottom: 1em;"><%= error %></div>
<% } %>
<form action="/admin/edit_blacklist" method="POST">
  <textarea name="blacklist" rows="20" style="width: 100%; font-family: monospace;"><%= blacklist.join('\n') %></textarea>
  <br><br>
  <button type="submit">Save Blacklist</button>
</form>
