<main class="p-6">
  <h1 class="text-2xl font-bold text-white mb-4">Editing: <%= name %></h1>

  <% if (messages && messages.error) { %>
    <div class="bg-red-600 text-white px-4 py-2 rounded mb-4">
      <%= messages.error %>
    </div>
  <% } %>

  <form method="POST" action="/admin/templates/edit/<%= encodeURIComponent(name) %>">
    <textarea name="content" rows="30" class="w-full p-4 bg-gray-900 text-white border border-gray-700 rounded font-mono"><%= content %></textarea>
    <div class="mt-4">
      <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">Save</button>
      <a href="/admin/templates" class="ml-4 text-gray-400 hover:text-white">Cancel</a>
    </div>
  </form>
</main>
