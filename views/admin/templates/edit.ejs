<main class="p-6">
  <h1 class="text-2xl font-bold mb-4"><span class="font-paragon">Editing:</span> <%= name %></h1>

  <% if (messages && messages.error) { %>
    <div class="bg-red-600 text-white px-4 py-2 rounded mb-4">
      <%= messages.error %>
    </div>
  <% } %>

  <form method="POST" action="/admin/templates/edit/<%= encodeURIComponent(name) %>">
    <textarea name="content" rows="30" class="w-full p-4 border border-gray-700 rounded font-mono"><%= content %></textarea>

    <div class="mt-4 flex gap-4">
      <button type="submit" class="w-32 bg-green-600 hover:bg-green-700 px-4 py-2 rounded text-white">
        <span class="font-paragon">Save</span>
      </button>
      <a href="/admin/templates" class="w-32 text-center bg-red-600 hover:bg-red-700 px-4 py-2 rounded text-white inline-block">
        <span class="font-paragon">Cancel</span>
      </a>
    </div>
  </form>

</main>
