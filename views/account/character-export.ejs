<div class="container">
  <h1 class="page-title">Export My Characters</h1>

  <% if (error && error.length) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (message && message.length) { %>
    <div class="alert alert-success"><%= message %></div>
  <% } %>

  <form action="/account/character-export" method="POST">
    <div class="form-group">
      <label for="serverKey">Select Server</label>
      <select name="serverKey" id="serverKey" class="form-control" required>
        <% servers.forEach(server => { %>
          <option value="<%= server.key %>"><%= server.label %></option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Export All Characters</button>
  </form>
</div>