{
  "name": "coh-launcher",
  "version": "0.5.12",
  "description": "City of Heroes Portable Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build:css": "npx tailwindcss -i ./styles.css -o ./public/styles.css --watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fast-xml-parser": "^4.3.5",
    "p-limit": "^6.2.0",
    "which": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "build": {
    "appId": "com.yourserver.cityvault",
    "productName": "City of Heroes Launcher",
    "asar": true,
    "files": [
      "**/*",
      "!**/*.md",
      "!/node_modules/*/{test,__tests__}/**",
      "!/tests/**/*",
      "!/docs/**/*",
      "!config.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "../config.json"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
